<Window x:Class="YouTubeKeywordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTubeKeywordGenerator"
        mc:Ignorable="d"
        Title="YouTube Keyword Generator" Height="350" Width="520">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
        <TextBox x:Name="KeywordTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="300"/>
        <RadioButton x:Name="CommaRadioButton" Content="Commas" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="HashRadioButton" Content="Hashtags" HorizontalAlignment="Left" Margin="80,40,0,0" VerticalAlignment="Top"/>
        <Button Content="Generate" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Click="GenerateButton_Click"/>
        <TextBox x:Name="ResultTextBox" HorizontalAlignment="Left" Height="200" Margin="10,100,0,0" VerticalAlignment="Top" Width="490" IsReadOnly="True" TextWrapping="Wrap" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}"/>
    </Grid>
</Window>
